	<div class="col-xs-24 col-sm-12 col-md-12">
		<div class="hero-image">
			<img src="{DATA.image}" alt="">
		</div>
	</div>
	<div class="col-xs-24 col-sm-12 col-md-12">
		<div class="hero-content text-center">
			<div class="hero-content-inner">
				<h2 class="animate__animated animate__fadeInUp">{DATA.name}</h2>
				<div class="des animate__animated animate__fadeInUp">
					{DATA.description}
				</div>
				<!-- BEGIN: link -->
				<a href="{DATA.link}" class="button animate__animated animate__fadeInRight">Bắt đầu ngay</a>
				<!-- END: link -->
			</div>
		</div>
	</div>
</div>
